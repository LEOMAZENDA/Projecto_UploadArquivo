@model IEnumerable<Application.ViewsModels.FicheiroVM>

@{
    ViewData["Title"] = "Index";
}



<form action="/Arquivos/Upload" enctype="multipart/form-data" method="post">
    <div class="form-group">
        <input type="file" name="arquivos" id="arquivos" multiple class="form-control-file">
    </div>
    <button type="submit" class="btn btn-primary">Enviar Ficheiro</button>
</form>
<br />

<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Descrição</th>
            <th scope="col">Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Descricao)</td>
                <td>
                    <div class="btn-group" role="group" aria-label="Ações">
                        <a href="/Arquivos/Visualizar/@item.Id" target="_blank" class="btn btn-primary">
                            <i class="bi bi-eye"></i> Visualizar
                        </a>
                        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteModal-@item.Id">
                            <i class="bi bi-trash"></i> Excluir
                        </button>
                    </div>
                </td>
            </tr>
           
        }
    </tbody>
</table>
